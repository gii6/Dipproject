<p id="notice"><%= notice %></p>

<h1>Список годов</h1>

<table>
  <thead>
    <tr>
      <th>Номер года</th>
      <th>Этот год сейчас?</th>
      <th>Месяц</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @years.each do |year| %>
      <tr>
        <td><%= year.name %></td>
        <td><%= year.is_current %></td>
        <td><%= year.month %></td>
        <td><%= link_to 'Показть', year %></td>
        <td><%= link_to 'Редактировать', edit_year_path(year) %></td>
        <td><%= link_to 'Удалить', year, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать год', new_year_path %>

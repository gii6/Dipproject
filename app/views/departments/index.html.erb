<p id="notice"><%= notice %></p>

<h1>Список отделов</h1>

<table>
  <thead>
    <tr>
      <th>Тип</th>
      <th>Наименование</th>
      <th>Директор</th>
      <th>Ответственный</th>
      <th>Год</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.style %></td>
        <td><%= department.name %></td>
        <td><%= department.director %></td>
        <td><%= department.responsible %></td>
        <td><%= department.year %></td>
        <td><%= link_to 'Показать', department %></td>
        <td><%= link_to 'Редактировать', edit_department_path(department) %></td>
        <td><%= link_to 'Удалить', department, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


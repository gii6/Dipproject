<p id="notice"><%= notice %></p>

<h1>Список людей</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>Отчество</th>
      <th>External</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.second_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.external_id %></td>
        <td><%= link_to 'Показать', person %></td>
        <td><%= link_to 'Редактировать', edit_person_path(person) %></td>
        <td><%= link_to 'Удалить', person, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

